{
    "pasteImage.encodePath": "none",
    "pasteImage.path": "${currentFileDir}/_figures",
    "pasteImage.prefix": ".. figure:: ",

    "hediet.vscode-drawio.online-url": "",

    "plantuml.jar": ".venv/plantuml.jar",
    "plantuml.lintDiagramNoName": false,
    "plantuml.jarArgs": [
        // "-config", "doc/plantuml.config" // Commented out because it doesn't work. Aborted my tryings...
    ],

    "patternlinks.rules": [
        {
            // Example URL: https://jira.mycompany.com/browse/PROJECTX-4711
            "linkPattern": "(?:\\s|`)((?:PROJECTX|PROJECTY|PROJECTZ)-(?:\\d+))",
            "linkTarget": "https://jira.mycompany.com/browse/$1"
        },
      ],
}
